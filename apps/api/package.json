{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf ./dist",
    "typecheck": "tsc --noEmit",
    "prebuild": "npm run clean && npm run typecheck",
    "build:binary": "bun build --compile --minify-whitespace --minify-syntax --external @libsql/linux-x64-gnu --outfile server src/index.ts",
    "start:binary": "./server",
    "dev": "bun run --watch src/index.ts",
    "auth:gen": "pnpm dlx @better-auth/cli generate -y --output src/db/schema/auth.ts && biome format --write src/db/schema/auth.ts",
    "drizzle:gen": "drizzle-kit generate",
    "drizzle:migrate": "drizzle-kit migrate",
    "drizzle:push": "drizzle-kit push",
    "drizzle:studio": "drizzle-kit studio",
    "drizzle:drop": "drizzle-kit drop"
  },
  "dependencies": {
    "@better-auth/expo": "1.4.9",
    "@elysiajs/cors": "^1.4.0",
    "@libsql/client": "^0.10.0",
    "@sentry/bun": "^10.32.1",
    "@tursodatabase/api": "^1.9.0",
    "@upstash/redis": "^1.36.0",
    "better-auth": "1.4.9",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "elysia": "^1.4.19",
    "jose": "^6.1.3",
    "nanoid": "^5.0.7",
    "pino": "^9.6.0",
    "resend": "^4.6.0",
    "tsx": "^4.7.1",
    "zod": "4.0.17"
  },
  "devDependencies": {
    "@bahar/typescript-config": "workspace:*",
    "bun-types": "^1.3.5",
    "drizzle-kit": "^0.31.8",
    "pino-pretty": "^13.0.0",
    "typescript": "^5.8.3"
  },
  "exports": {
    ".": "./src/index.ts",
    "./schemas": "./src/schemas/index.ts",
    "./error": "./src/error.ts",
    "./auth": "./src/auth.ts"
  }
}
