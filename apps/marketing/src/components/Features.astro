---
import { t, type Locale } from '../i18n';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
---

<section class="relative py-24 sm:py-32">
  <!-- Background decoration -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute left-1/2 top-0 h-[500px] w-[500px] -translate-x-1/2 rounded-full bg-primary/5 blur-3xl"></div>
  </div>

  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="mx-auto max-w-2xl text-center">
      <div class="mb-4 inline-flex items-center gap-2 rounded-full bg-primary/10 px-3 py-1 text-sm font-medium text-primary">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
        {t(locale, 'features.badge')}
      </div>
      <h2 class="text-3xl font-bold tracking-tight sm:text-4xl lg:text-5xl">
        {t(locale, 'features.title')}
      </h2>
      <p class="mt-4 text-lg text-muted-foreground">
        {t(locale, 'features.subtitle')}
      </p>
    </div>

    <!-- Bento Grid -->
    <div class="mx-auto mt-16 grid max-w-6xl gap-4 sm:grid-cols-2 lg:grid-cols-3">
      <!-- Feature 1: Personal Dictionary (Large) -->
      <div class="group relative overflow-hidden rounded-3xl border border-border/50 bg-gradient-to-b from-card to-card/50 p-8 transition-all duration-300 hover:border-primary/30 hover:shadow-lg hover:shadow-primary/5 sm:col-span-2 lg:col-span-2">
        <div class="absolute -right-20 -top-20 h-40 w-40 rounded-full bg-primary/10 blur-3xl transition-all duration-500 group-hover:bg-primary/20"></div>
        <div class="relative">
          <div class="mb-6 inline-flex h-14 w-14 items-center justify-center rounded-2xl bg-gradient-to-br from-primary to-blue-500 text-white shadow-lg shadow-primary/25">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <h3 class="mb-3 text-2xl font-bold">{t(locale, 'features.dictionary.title')}</h3>
          <p class="max-w-md text-muted-foreground">{t(locale, 'features.dictionary.description')}</p>

          <!-- Mini illustration -->
          <div class="mt-8 flex gap-3">
            {['ك-ت-ب', 'د-ر-س', 'ع-ل-م'].map((root) => (
              <div class="rounded-lg border border-border/50 bg-background/50 px-3 py-2 text-sm font-medium text-primary">
                {root}
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Feature 2: Smart Flashcards -->
      <div class="group relative overflow-hidden rounded-3xl border border-border/50 bg-gradient-to-b from-card to-card/50 p-8 transition-all duration-300 hover:border-primary/30 hover:shadow-lg hover:shadow-primary/5">
        <div class="absolute -right-10 -top-10 h-32 w-32 rounded-full bg-blue-500/10 blur-2xl transition-all duration-500 group-hover:bg-blue-500/20"></div>
        <div class="relative">
          <div class="mb-6 inline-flex h-14 w-14 items-center justify-center rounded-2xl bg-gradient-to-br from-blue-500 to-cyan-500 text-white shadow-lg shadow-blue-500/25">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h3 class="mb-3 text-xl font-bold">{t(locale, 'features.flashcards.title')}</h3>
          <p class="text-muted-foreground">{t(locale, 'features.flashcards.description')}</p>
        </div>
      </div>

      <!-- Feature 3: Custom Decks -->
      <div class="group relative overflow-hidden rounded-3xl border border-border/50 bg-gradient-to-b from-card to-card/50 p-8 transition-all duration-300 hover:border-primary/30 hover:shadow-lg hover:shadow-primary/5">
        <div class="absolute -right-10 -top-10 h-32 w-32 rounded-full bg-violet-500/10 blur-2xl transition-all duration-500 group-hover:bg-violet-500/20"></div>
        <div class="relative">
          <div class="mb-6 inline-flex h-14 w-14 items-center justify-center rounded-2xl bg-gradient-to-br from-violet-500 to-purple-500 text-white shadow-lg shadow-violet-500/25">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
          </div>
          <h3 class="mb-3 text-xl font-bold">{t(locale, 'features.decks.title')}</h3>
          <p class="text-muted-foreground">{t(locale, 'features.decks.description')}</p>
        </div>
      </div>

      <!-- Feature 4: Bilingual (Wide) -->
      <div class="group relative overflow-hidden rounded-3xl border border-border/50 bg-gradient-to-b from-card to-card/50 p-8 transition-all duration-300 hover:border-primary/30 hover:shadow-lg hover:shadow-primary/5 sm:col-span-2 lg:col-span-2">
        <div class="absolute -left-20 -bottom-20 h-40 w-40 rounded-full bg-emerald-500/10 blur-3xl transition-all duration-500 group-hover:bg-emerald-500/20"></div>
        <div class="relative flex flex-col gap-6 sm:flex-row sm:items-center sm:justify-between">
          <div class="flex-1">
            <div class="mb-6 inline-flex h-14 w-14 items-center justify-center rounded-2xl bg-gradient-to-br from-emerald-500 to-teal-500 text-white shadow-lg shadow-emerald-500/25">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
              </svg>
            </div>
            <h3 class="mb-3 text-2xl font-bold">{t(locale, 'features.bilingual.title')}</h3>
            <p class="max-w-md text-muted-foreground">{t(locale, 'features.bilingual.description')}</p>
          </div>

          <!-- Direction arrows illustration -->
          <div class="flex items-center gap-4 rounded-2xl border border-border/50 bg-background/50 p-4">
            <div class="text-center">
              <div class="text-2xl font-arabic">عربي</div>
              <div class="text-xs text-muted-foreground">Arabic</div>
            </div>
            <div class="flex flex-col gap-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
            </div>
            <div class="text-center">
              <div class="text-2xl font-semibold">English</div>
              <div class="text-xs text-muted-foreground">إنجليزي</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
