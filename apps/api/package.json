{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf ./dist",
    "typecheck": "tsc --noEmit",
    "prebuild": "npm run clean && npm run typecheck",
    "build": "node build.mjs",
    "start": "node --import ./instrument.mjs dist/index.mjs",
    "dev": "tsx watch src",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "auth:gen": "pnpm dlx @better-auth/cli generate -y --output src/db/schema/auth.ts && prettier --write src/db/schema/auth.ts",
    "drizzle:gen": "drizzle-kit generate",
    "drizzle:migrate": "drizzle-kit migrate",
    "drizzle:push": "drizzle-kit push",
    "drizzle:studio": "drizzle-kit studio",
    "drizzle:drop": "drizzle-kit drop"
  },
  "dependencies": {
    "@better-auth/expo": "1.4.9",
    "@libsql/client": "^0.10.0",
    "@sentry/esbuild-plugin": "^2.22.7",
    "@sentry/node": "^8.48.0",
    "@sentry/profiling-node": "^8.48.0",
    "@trpc/client": "^11.4.3",
    "@trpc/server": "^11.4.3",
    "@tursodatabase/api": "^1.9.0",
    "@upstash/redis": "^1.36.0",
    "better-auth": "1.4.9",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "express": "^4.18.2",
    "jose": "^6.1.3",
    "multer": "1.4.5-lts.1",
    "nanoid": "^5.0.7",
    "pino": "^9.6.0",
    "pino-http": "^10.3.0",
    "resend": "^4.6.0",
    "tsx": "^4.7.1",
    "zod": "4.0.17"
  },
  "devDependencies": {
    "@bahar/eslint-config": "workspace:*",
    "@bahar/typescript-config": "workspace:*",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/pino-http": "^5.8.4",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "drizzle-kit": "^0.31.8",
    "esbuild": "^0.21.5",
    "esbuild-plugin-file-path-extensions": "^2.1.2",
    "eslint": "^8.56.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.1.1",
    "typescript": "^5.8.3"
  },
  "exports": {
    ".": "./src/index.ts",
    "./schemas": "./src/schemas/index.ts",
    "./error": "./src/error.ts",
    "./auth": "./src/auth.ts"
  }
}
