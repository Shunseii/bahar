---
import type { Locale } from "../i18n";

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
---

<section class="relative overflow-hidden pt-24 pb-20 sm:pt-32 sm:pb-32 lg:pt-40">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-4xl text-center">
      <!-- Animated Badge -->
      <div class="mb-8 inline-flex items-center gap-2 rounded-full border border-primary/20 bg-primary/5 px-4 py-1.5 text-sm font-medium text-primary backdrop-blur-sm">
        <span class="relative flex h-2 w-2">
          <span class="absolute inline-flex h-full w-full animate-ping rounded-full bg-primary opacity-75"></span>
          <span class="relative inline-flex h-2 w-2 rounded-full bg-primary"></span>
        </span>
        {t(locale, 'hero.badge')}
      </div>

      <!-- Headline with gradient -->
      <h1 class="text-5xl font-bold tracking-tight sm:text-6xl lg:text-7xl">
        <span class="block">{t(locale, 'hero.title.line1')}</span>
        <span class="mt-2 block bg-gradient-to-r from-primary via-blue-400 to-primary bg-clip-text text-transparent">
          {t(locale, 'hero.title.line2')}
        </span>
      </h1>

      <p class="mx-auto mt-8 max-w-2xl text-lg leading-relaxed text-muted-foreground sm:text-xl">
        {t(locale, 'hero.subtitle')}
      </p>

      <!-- CTA Buttons -->
      <div class="mt-12 flex flex-col items-center justify-center gap-4 sm:flex-row sm:gap-6">
        <a
          href="https://bahar.dev"
          class="group relative inline-flex w-full items-center justify-center overflow-hidden rounded-xl bg-primary px-8 py-4 text-base font-semibold text-primary-foreground shadow-lg shadow-primary/25 transition-all duration-300 hover:shadow-xl hover:shadow-primary/30 sm:w-auto"
        >
          <span class="relative z-10 flex items-center gap-2">
            {t(locale, 'hero.cta.primary')}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 transition-transform duration-300 group-hover:translate-x-1 rtl:rotate-180 rtl:group-hover:-translate-x-1"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </span>
          <!-- Shine effect -->
          <div class="absolute inset-0 -translate-x-full bg-gradient-to-r from-transparent via-white/20 to-transparent transition-transform duration-700 group-hover:translate-x-full"></div>
        </a>
        <a
          href={getLocalizedPath('blog', locale)}
          class="group inline-flex w-full items-center justify-center gap-2 rounded-xl border border-border bg-background/50 px-8 py-4 text-base font-semibold text-foreground backdrop-blur-sm transition-all duration-300 hover:border-primary/50 hover:bg-primary/5 sm:w-auto"
        >
          {t(locale, 'hero.cta.secondary')}
        </a>
      </div>
    </div>

    <!-- App Preview (hidden on mobile) -->
    <div class="hidden sm:block mx-auto mt-20 max-w-5xl sm:mt-28">
      <!-- Preview Tabs -->
      <div class="flex justify-center gap-2 mb-6">
        <button
          class="hero-preview-tab cursor-pointer px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 bg-primary text-primary-foreground"
          data-tab="dictionary"
          type="button"
        >
          {t(locale, 'hero.mockup.tab.dictionary')}
        </button>
        <button
          class="hero-preview-tab cursor-pointer px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 bg-muted text-muted-foreground hover:bg-muted/80"
          data-tab="flashcards"
          type="button"
        >
          {t(locale, 'hero.mockup.tab.flashcards')}
        </button>
      </div>

      <div class="relative">
        <!-- Glow effect behind -->
        <div class="absolute -inset-4 rounded-2xl bg-gradient-to-r from-primary/20 via-blue-500/20 to-primary/20 opacity-50 blur-3xl"></div>

        <!-- Browser mockup -->
        <div class="relative overflow-hidden rounded-2xl border border-border/50 bg-card/80 shadow-2xl backdrop-blur-sm">
          <!-- Browser header -->
          <div class="flex items-center gap-2 border-b border-border/50 bg-muted/50 px-4 py-3">
            <div class="flex gap-1.5">
              <div class="h-3 w-3 rounded-full bg-red-400/80"></div>
              <div class="h-3 w-3 rounded-full bg-yellow-400/80"></div>
              <div class="h-3 w-3 rounded-full bg-green-400/80"></div>
            </div>
            <div class="mx-auto flex items-center gap-2 rounded-md bg-background/50 px-3 py-1 text-xs text-muted-foreground">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
              bahar.dev
            </div>
          </div>

          <!-- App content -->
          <div class="aspect-[16/9] bg-background flex relative">
            <!-- Sidebar - always shows home as active -->
            <div class="hidden sm:flex w-14 flex-col items-center ltr:border-r rtl:border-l border-border py-4">
              <!-- Nav icons -->
              <div class="flex flex-col gap-4">
                <div class="p-2 rounded-lg bg-muted">
                  <svg class="h-5 w-5 text-foreground" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                  </svg>
                </div>
                <div class="p-2 rounded-lg">
                  <svg class="h-5 w-5 text-muted-foreground" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                  </svg>
                </div>
              </div>
              <!-- Settings at bottom -->
              <div class="mt-auto p-2 rounded-lg">
                <svg class="h-5 w-5 text-muted-foreground" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
            </div>

            <!-- Main content - Dictionary -->
            <div class="flex-1 p-3 sm:p-4 overflow-hidden">
              <!-- Search bar -->
              <div class="flex items-center justify-center mb-3">
                <div class="flex items-center gap-2 rounded-lg border border-border bg-muted/50 px-3 py-1.5 w-full max-w-md">
                  <svg class="h-4 w-4 text-muted-foreground" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                  </svg>
                  <span class="text-sm text-muted-foreground">{t(locale, 'hero.mockup.search')}</span>
                </div>
              </div>

              <!-- Dictionary card -->
              <div class="relative rounded-xl border-0 bg-card overflow-hidden shadow-xl shadow-black/5 dark:shadow-black/20">
                <!-- Decorative gradient background -->
                <div class="absolute inset-0 bg-gradient-to-br from-primary/[0.03] via-transparent to-primary/[0.02]"></div>
                <div class="absolute top-0 inset-x-0 h-px bg-gradient-to-r from-transparent via-primary/20 to-transparent"></div>

                <!-- Card header -->
                <div class="relative px-3 sm:px-4 pt-3 sm:pt-4 pb-2 sm:pb-3">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-2 sm:gap-3">
                      <div class="flex items-center justify-center w-7 h-7 sm:w-8 sm:h-8 rounded-lg bg-primary/10 ring-1 ring-primary/20">
                        <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                        </svg>
                      </div>
                      <div>
                        <h3 class="text-sm sm:text-base font-semibold tracking-tight text-foreground">{t(locale, 'hero.mockup.dictionary')}</h3>
                        <p class="text-[10px] sm:text-xs text-muted-foreground">{t(locale, 'hero.mockup.dictionarySubtitle')}</p>
                      </div>
                    </div>
                    <!-- Action buttons -->
                    <div class="flex items-center gap-1.5 sm:gap-2">
                      <button class="flex items-center gap-1 px-2 py-1 text-[10px] sm:text-xs text-orange-500 hover:bg-orange-500/5 rounded-md transition-colors">
                        <svg class="h-3 w-3 sm:h-3.5 sm:w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path d="M12 14l9-5-9-5-9 5 9 5z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
                        </svg>
                        <span>{t(locale, 'hero.mockup.reviewFlashcards')}</span>
                        <span class="inline-flex items-center justify-center min-w-[1rem] h-4 px-1 text-[9px] font-semibold rounded-full bg-orange-500 text-white">3</span>
                      </button>
                      <button class="flex items-center gap-1 px-2 py-1 text-[10px] sm:text-xs font-medium text-primary-foreground bg-primary hover:bg-primary/90 rounded-md shadow-sm shadow-primary/25 transition-colors">
                        <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                        {t(locale, 'hero.mockup.addWord')}
                      </button>
                    </div>
                  </div>
                </div>

                <!-- Divider -->
                <div class="mx-3 sm:mx-4 h-px bg-gradient-to-r from-border/50 via-border to-border/50"></div>

                <!-- Word list -->
                <div class="relative divide-y divide-border/50">
                  {[
                    { ar: 'كِتَاب', en: 'book' },
                    { ar: 'مِفتَاح', en: 'key' },
                    { ar: 'جَلَسَ', en: 'to sit', isVerb: true },
                    { ar: 'تُفَّاحَة', en: 'apple' },
                  ].map((word) => (
                    <div class="flex items-center justify-between px-3 sm:px-4 py-2 sm:py-2.5 hover:bg-muted/30 transition-colors group">
                      <div class="flex flex-col">
                        <span class="text-base sm:text-lg font-arabic text-foreground">{word.ar}</span>
                        <span class="text-[10px] sm:text-xs text-muted-foreground">{word.en}</span>
                      </div>
                      <div class="flex items-center gap-1.5 opacity-0 group-hover:opacity-100 transition-opacity">
                        <svg class="h-3.5 w-3.5 text-muted-foreground/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                        </svg>
                        <svg class="h-3.5 w-3.5 text-muted-foreground/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                        <svg class="h-3.5 w-3.5 text-muted-foreground/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </div>

            <!-- Flashcard Drawer Overlay -->
            <div class="hero-flashcard-drawer absolute inset-0 hidden">
              <!-- Backdrop -->
              <div class="absolute inset-0 bg-black/60 backdrop-blur-sm"></div>

              <!-- Drawer -->
              <div class="absolute inset-x-0 bottom-0 top-6 sm:top-10 bg-background rounded-t-3xl border-t border-x border-border/50 shadow-2xl shadow-black/20 flex flex-col">
                <!-- Drawer handle -->
                <div class="flex justify-center pt-3 pb-1">
                  <div class="w-10 h-1 rounded-full bg-muted-foreground/20"></div>
                </div>

                <!-- Cards to review header -->
                <div class="flex items-center justify-center gap-2 px-4 pb-2">
                  <div class="p-1.5 rounded-lg bg-primary/10">
                    <svg class="w-3.5 h-3.5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                    </svg>
                  </div>
                  <span class="text-sm font-medium text-foreground">{t(locale, 'hero.mockup.flashcard.cardsToReview')}</span>
                </div>

                <!-- Flashcard content -->
                <div class="flex-1 flex flex-col items-center justify-center px-3 sm:px-4">
                  <!-- Type badges -->
                  <div class="flex items-center justify-center gap-2 mb-2">
                    <span class="px-2 py-0.5 rounded-md bg-primary/10 text-[10px] sm:text-xs font-medium text-primary border border-primary/20">
                      {t(locale, 'hero.mockup.flashcard.noun')}
                    </span>
                    <span class="px-2 py-0.5 rounded-md bg-muted text-[10px] sm:text-xs text-muted-foreground border border-border/50">
                      objects
                    </span>
                  </div>

                  <!-- Card content area with gradient background -->
                  <div class="w-full max-w-sm p-3 sm:p-4 rounded-xl bg-gradient-to-br from-muted/30 to-muted/10 border border-border/30">
                    <div class="text-center space-y-2">
                      <!-- Arabic word -->
                      <div class="text-2xl sm:text-3xl font-arabic text-foreground/90 leading-relaxed">
                        مِفتَاح
                      </div>

                      <!-- Singular/Plural pills -->
                      <div class="flex items-center justify-center gap-2 text-xs sm:text-sm text-muted-foreground">
                        <span class="px-2 py-0.5 rounded bg-muted/50 font-arabic">(م) مِفتَاح</span>
                        <span class="px-2 py-0.5 rounded bg-muted/50 font-arabic">(ج) مَفَاتِيح</span>
                      </div>

                      <!-- Separator -->
                      <div class="my-3 h-px bg-gradient-to-r from-transparent via-border to-transparent"></div>

                      <!-- Answer indicator -->
                      <div class="flex items-center justify-center gap-1.5 text-green-600 dark:text-green-400 text-xs">
                        <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        <span class="font-medium uppercase tracking-wide">{t(locale, 'hero.mockup.flashcard.answer')}</span>
                      </div>

                      <!-- Translation -->
                      <div class="text-base sm:text-lg text-foreground/90">
                        key
                      </div>
                    </div>
                  </div>

                  <!-- Review buttons -->
                  <div class="mt-3 sm:mt-4 flex items-stretch justify-center gap-1.5 sm:gap-2 w-full max-w-sm">
                    <!-- Again Button -->
                    <button class="flex-1 flex flex-col items-center gap-0.5 py-1.5 sm:py-2 px-1.5 sm:px-2 rounded-lg border-2 border-muted-foreground/20 hover:border-muted-foreground/40 hover:bg-muted/50 transition-all">
                      <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 text-muted-foreground" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                      </svg>
                      <span class="text-[10px] sm:text-xs font-medium text-foreground">{t(locale, 'hero.mockup.flashcard.again')}</span>
                      <span class="text-[8px] sm:text-[10px] text-muted-foreground">{t(locale, 'hero.mockup.flashcard.1min')}</span>
                    </button>

                    <!-- Hard Button -->
                    <button class="flex-1 flex flex-col items-center gap-0.5 py-1.5 sm:py-2 px-1.5 sm:px-2 rounded-lg border-2 border-orange-500/30 hover:border-orange-500/50 hover:bg-orange-500/10 transition-all">
                      <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                      </svg>
                      <span class="text-[10px] sm:text-xs font-medium text-orange-600 dark:text-orange-400">{t(locale, 'hero.mockup.flashcard.hard')}</span>
                      <span class="text-[8px] sm:text-[10px] text-muted-foreground">{t(locale, 'hero.mockup.flashcard.5min')}</span>
                    </button>

                    <!-- Good Button -->
                    <button class="flex-1 flex flex-col items-center gap-0.5 py-1.5 sm:py-2 px-1.5 sm:px-2 rounded-lg border-2 border-primary/30 hover:border-primary/50 hover:bg-primary/10 transition-all">
                      <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
                      </svg>
                      <span class="text-[10px] sm:text-xs font-medium text-primary">{t(locale, 'hero.mockup.flashcard.good')}</span>
                      <span class="text-[8px] sm:text-[10px] text-muted-foreground">{t(locale, 'hero.mockup.flashcard.10min')}</span>
                    </button>

                    <!-- Easy Button -->
                    <button class="flex-1 flex flex-col items-center gap-0.5 py-1.5 sm:py-2 px-1.5 sm:px-2 rounded-lg border-2 border-green-500/30 hover:border-green-500/50 hover:bg-green-500/10 transition-all">
                      <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                      </svg>
                      <span class="text-[10px] sm:text-xs font-medium text-green-600 dark:text-green-400">{t(locale, 'hero.mockup.flashcard.easy')}</span>
                      <span class="text-[8px] sm:text-[10px] text-muted-foreground">{t(locale, 'hero.mockup.flashcard.16days')}</span>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  function initHeroTabs() {
    const tabs = document.querySelectorAll('.hero-preview-tab');
    const drawer = document.querySelector('.hero-flashcard-drawer');

    if (!tabs.length || !drawer) return;

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const targetTab = tab.getAttribute('data-tab');

        // Update tab styles
        tabs.forEach(t => {
          if (t.getAttribute('data-tab') === targetTab) {
            t.classList.remove('bg-muted', 'text-muted-foreground', 'hover:bg-muted/80');
            t.classList.add('bg-primary', 'text-primary-foreground');
          } else {
            t.classList.remove('bg-primary', 'text-primary-foreground');
            t.classList.add('bg-muted', 'text-muted-foreground', 'hover:bg-muted/80');
          }
        });

        // Toggle drawer visibility
        if (targetTab === 'flashcards') {
          drawer.classList.remove('hidden');
        } else {
          drawer.classList.add('hidden');
        }
      });
    });
  }

  // Initialize on DOMContentLoaded
  document.addEventListener('DOMContentLoaded', initHeroTabs);

  // Re-initialize on Astro page transitions (View Transitions API)
  document.addEventListener('astro:page-load', initHeroTabs);
</script>
